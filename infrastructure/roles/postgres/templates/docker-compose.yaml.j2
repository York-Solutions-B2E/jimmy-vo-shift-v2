version: '2.21'

services:
  db:
    image: postgres:14.10
    restart: always
    environment:
      - POSTGRES_USER=admin
      - POSTGRES_PASSWORD={{ PSQL_PW }}
      - POSTGRES_DB=shift_DB
    volumes:
      - postgres-data:/var/lib/postgresql/data
    ports:
      - "5432:5432"

volumes:
  postgres-data:

